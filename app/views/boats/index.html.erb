<h1>boats index</h1>

<% @boats.each do |boat| %>
  <h2><%= link_to boat.name, boat_path(boat) %></h2>
  <p><%= boat.address %></p>
<% end %>


<div class="container padded">
  <div class="row">
    <% @boats.each do |boat| %>
      <div class="col-xs-12 col-sm-4 col-lg-3">
        <% if boat.photos? %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path boat.photos.last.path %>');">
          </div>
        <% else %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(' Image-defaut.png');">
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
