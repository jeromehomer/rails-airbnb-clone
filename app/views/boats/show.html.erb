<h1>See the <%= @boat.name %></h1>

<p>Port d'attache: <%= @boat.address.capitalize %></p>
<%= link_to "Modifier", edit_boat_path(@boat) %>
<%= link_to "Suprimer", boat_path(@boat),
method: :delete,
data: { confirm: "Etes vous sur?"} %>
<p>Type de bateau: <%= @boat.kind.capitalize %></p>
<p>Propri√©taire: <%= @boat.user.first_name.capitalize + " " + @boat.user.last_name.capitalize %></p>


<div class="pictures">
<% if @boat.photos? %>
  <% @boat.photos.each do |photo| %>
    <%=  cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
    <% end %>
  <% end %>
 </div>


<div class="container">
  <div class="input-daterange input-group" id="datepicker">
    <%= simple_form_for [@boat, @renting] do |f| %>
      <%= f.text_field :starting_date, placeholder: 'Start Date', class: 'input-md form-control', readonly: 'true' %>
      <%= f.text_field :end_date, placeholder: 'End Date', class: 'input-sm form-control', readonly: 'true' %>
      <%= f.submit :book, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>



